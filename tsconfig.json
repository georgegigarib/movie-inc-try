{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@env": ["./expo-env.d.ts"]
    },
    "types": ["./env.d.ts"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts", 
    "jest-setup.js", 
    "__mocks__/@env.ts", 
    "__mocks__/fileMock.js", 
    "jest.config.js",
    "env.d.ts"
]

}
