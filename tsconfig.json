{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@env": ["./expo-env.d.ts"]
    },
    "types": ["./expo-env.d.ts"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts", 
    "jest-setup.js", 
    "__mocks__/@env.ts", 
    "jest.config.js",   
    "app/(tabs)/index .js"  
]
}
